{
  "main": "electron/main.js",
  "name": "cyoa-downloader",
  "version": "2.1.0",
  "description": "Tool for downloading interactive cyoas with embedded images (including viewer) and compressing to avif",
  "keywords": [
    "ICC",
    "ICC+",
    "CYOA",
    "compress",
    "avif"
  ],
  "author": "blathers16",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "electron": "ng build --base-href . && electron .",
    "electron:dev": "start ng build  --base-href . --watch && start electron .",
    "build": "ng build  --base-href .",
    "watch": "ng build --watch",
    "serve": "npx http-server dist/cyoa-json-downloader/browser/",
    "test": "npm run copy:assets && ng test",
    "copy:assets": "globby-cp node_modules/**/*.wasm src/assets/wasm/",
    "clean:assets": "del-cli src/assets/wasm/*.wasm",
    "browser": "start .\\helper-scripts\\open-chrome-no-cors.bat"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.4",
    "@angular/common": "^20.3.4",
    "@angular/compiler": "^20.3.4",
    "@angular/core": "^20.3.4",
    "@angular/forms": "^20.3.4",
    "@angular/platform-browser": "^20.3.4",
    "@angular/platform-browser-dynamic": "^20.3.4",
    "@ffmpeg.wasm/core-st": "^0.13.2",
    "@ffmpeg.wasm/main": "^0.13.1",
    "@imagemagick/magick-wasm": "^0.0.36",
    "@jsquash/avif": "^1.3.0",
    "@ng-bootstrap/ng-bootstrap": "^19.0.1",
    "@popperjs/core": "^2.11.8",
    "base64-arraybuffer": "^1.0.2",
    "bootstrap": "^5.3.3",
    "client-zip": "^2.5.0",
    "observable-webworker": "^6.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.5",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.4",
    "@angular/localize": "^20.3.4",
    "@types/jasmine": "~5.1.0",
    "del-cli": "^7.0.0",
    "electron": "^38.2.2",
    "globby-cp": "^1.4.5",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "schematics-scss-migrate": "^2.3.17",
    "typescript": "~5.8.3"
  },
  "build": {
    "appId": "com.blath16.cyoajsondownloader",
    "files": [
      "dist/cyoa-json-downloader/browser/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
